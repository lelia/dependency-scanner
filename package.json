{
  "name": "dependency-scanner",
  "version": "1.0.0",
  "description": "A tool to scan dependency manifest files and report known vulnerabilities.",
  "main": "dist/src/cli.js",
  "bin": {
    "dependency-scanner": "dist/src/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "scan": "node dist/src/cli.js",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/src/cli.js",
    "test": "npm run build && node --test 'dist/tests/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lelia/dependency-scanner.git"
  },
  "keywords": [
    "dependency",
    "security",
    "vulnerability"
  ],
  "author": "lelia",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/lelia/dependency-scanner/issues"
  },
  "homepage": "https://github.com/lelia/dependency-scanner#readme",
  "dependencies": {
    "@octokit/graphql": "^9.0.3",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/node-fetch": "^2.6.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
